{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["esnext", "dom"],
    "moduleResolution": "bundler",
    "types": ["@vitest/browser/providers/playwright"],
    "jsx": "react-jsx",
    "declaration": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "declarationMap": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  }
}
